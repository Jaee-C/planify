{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "eslint:recommended",
    "google",
    "prettier"
  ],
  "plugins": [
    "@typescript-eslint",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": 2016,
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "rules": {
    "prettier/prettier": ["error"],
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "error",
    "valid-jsdoc": [2, {
      "requireParamType": false,
      "requireParamDescription": false,
      "requireReturnDescription": false,
      "requireReturn": false,
      "prefer": {"returns": "return"}
    }]
  },
  "ignorePatterns": ["*.config.*", "*.test.*", "coverage/*", "node_modules/*", "*.d.ts"]
}
